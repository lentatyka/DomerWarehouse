<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".presentation.main.fragments.AddressChangeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/address_change_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/address_item" />

    <TextView
        android:id="@+id/tv_address_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/address_add"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/address_change_recycler" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_address_add"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_address_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"/>

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>